{
  "builders": [
    {
      "type": "qemu",
      "iso_url": "file:///e/ISOs/CentOS-8.3.2011-x86_64-dvd1.iso",
      "iso_checksum": "none",
      "disk_size": "40960M",
      "disk_interface": "virtio",
      "disk_cache": "none",
      "disk_detect_zeroes": "on",
      "format": "qcow2",
      "cpus": "1",
      "memory": "2048",
      "accelerator": "kvm",
      "headless": true,
      "machine_type": "q35",
      "net_device": "virtio-net",
      "net_bridge": "br0",
      "output_directory": "/e/packer/packer-centos8",
      "http_directory": "/e/packer/http",
      "communicator": "none",
      "shutdown_timeout": "30m",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centos8-ks.cfg<enter><wait>"
      ]
    }
  ]
}

